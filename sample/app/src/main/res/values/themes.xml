<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CircleTranspo" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/ocean_blue</item>
        <item name="colorPrimaryVariant">@color/ocean_blue</item>
        <item name="colorOnPrimary">@color/dirty_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/ocean_blue</item>
        <item name="colorSecondaryVariant">@color/ocean_blue</item>
        <item name="colorOnSecondary">@color/gray</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/ocean_blue</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.CircleTranspo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.CircleTranspo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.CircleTranspo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>